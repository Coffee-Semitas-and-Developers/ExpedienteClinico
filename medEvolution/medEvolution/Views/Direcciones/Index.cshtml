@model IEnumerable<MedEvolution.Models.App.Direccion>

@{
    ViewBag.Title = "Indice";
}

<h2>Direcciones</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Municipio.NombreMun)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Casa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colonia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pasaje_Calle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th>Opciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Municipio.NombreMun)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Casa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colonia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pasaje_Calle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { ColoniaID = item.Colonia, Pasaje_CalleID = item.Pasaje_Calle, CasaID = item.Casa }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalles", "Details", new { ColoniaID = item.Colonia, Pasaje_CalleID = item.Pasaje_Calle, CasaID = item.Casa }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Eliminar", "Delete", new { ColoniaID = item.Colonia, Pasaje_CalleID = item.Pasaje_Calle, CasaID = item.Casa }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
